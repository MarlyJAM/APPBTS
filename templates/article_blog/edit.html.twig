{% extends 'base.html.twig' %}

{% block title %}Edit ArticleBlog{% endblock %}

{% block body %}
    <h1>Edit ArticleBlog</h1>

    {{ include('article_blog/_form.html.twig', {'button_label': 'Update'}) }}
     <h2>Images</h2>
    {% for image in article_blog.images %}
        <div >
            <img src="{{asset('uploads/article/mini/300x300-'~ image.name)}}" >
            <a href="{{path('app_article_delete_image',{id: image.id})}}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
        </div> 
    {% endfor %}
    <a href="{{ path('app_article_blog_index') }}">back to list</a>

    <script src="{{asset('js/image.js')}}" defer></script>

{% endblock %}

