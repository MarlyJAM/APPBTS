{% extends 'base.html.twig' %}

{% block title %}questions{% endblock %}

{% block body %}
    <div class="row row-cols-1 row-cols-md-3 g-4  mx-auto my-auto d-flex align-content-around flex-wrap">
    {% for question in questions %}
    {% if question.isVerified == true %}
        <div class="col">
        <div class="card h-100">
            <div class="card-header">
             {{question.mainTitle}}
             </div>
            <div class="card-body">
            <h5 class="card-title">{{question.description}}</h5>
            <a href="/{{question.id}}/content/ "class="btn btn-primary">{{ button_label|default('Voir') }}</a>
            </div>
            <div class="card-footer text-muted">
            <p class="card-text"><b>Publi√© par</b> : {{ question.author.pseudo}} <b>le</b> : {{ question.createdAt|date("d/m/Y H:i") }}</p>
            </div>
        </div>
        </div>
    {% endif %}
    {% endfor %}          
    </div>
    <div class="navigation">
        {{ knp_pagination_render(questions) }}
    </div>
        
    
{% endblock %}
